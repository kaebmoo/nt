# Email Configuration (SMTP)
SMTP_USERNAME=your-email@ntplc.co.th
SMTP_PASSWORD=your-password-here

# Admin Emails (comma-separated)
ADMIN_EMAILS=admin1@ntplc.co.th,admin2@ntplc.co.th

# Secret Key for session management
# Generate a strong random key in production
# Example: openssl rand -hex 32
SECRET_KEY=change-this-to-random-secret-key-in-production

# Development Mode
# Set to True to display OTP on screen instead of sending email
# Set to False in production
DEV_MODE=True
